#include<iostream>
using namespace std;
int main(){
	int x[5]={4,3,5,2,1};
	int sum=0;
	for(int i=0;i<5;i++){
		sum=sum+x[i];
	}
	double avg=sum/5.0;
	cout<<"The sum is"<<sum<<endl;
	cuot<<"The average is"<<avg<<endl;
	system {" pause"};
	return 0;
}
